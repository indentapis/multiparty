{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": [
    "src/*.ts",
    "src/*.js",
  ],
  "exclude": [
    "node_modules"
  ]
}